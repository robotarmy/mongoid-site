!!! Strict
%html{html_attrs}
  %head
    %meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
    %title
      Mongoid
      - if item[:title]
        = "- #{item[:title]}"

    %link{:href => "/stylesheets/home.css", :rel => "stylesheet", :type => "text/css"}
    
    -# jquery tools support
    %script{:src => "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"}
    %script{:src => "/javascript/jquery.tools.min.js"}
    
    -# fancy fonts
    %script{:src => "/javascript/cufon-yui.js", :type => "text/javascript"}
    %script{:src => "/javascript/nevis_700.font.js", :type => "text/javascript"}
    :javascript
      Cufon.replace('h3.fancy');
  %body
    #landing
      = render "shared/menu"

      #landing_box
        :preserve
          #{yield}
      
      = render "shared/footer"

    #ribbon
      %p
        %a{:href => "http://github.com/mongoid/mongoid-site", :rel => "me", :title => "Fork me on GitHub!"} Fork me on GitHub!


    